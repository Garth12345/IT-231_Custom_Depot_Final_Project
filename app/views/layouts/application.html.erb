<!DOCTYPE html>
<html>

  <head>
    <title>Garth's Taco Delivery</title>

    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>






  </head>

  <body class="w3-container">

    <div class="w3-bar w3-light-green">
      <a href="/" class="w3-bar-item w3-button">
      <%= image_tag 'taco_1.jpg', alt: 'Taco', height: '28', width: '40', style: 'display: block; margin-left: auto; margin-right: auto; margin-bottom: none; margin-top: none' %></a>
      <a href="/static_pages/home" class="w3-bar-item w3-button">Home</a>
      <a href="/" class="w3-bar-item w3-button">Store</a>
      <a href="/static_pages/help" class="w3-bar-item w3-button">Help</a>
      <a href="/static_pages/about" class="w3-bar-item w3-button">About</a>
      <%= link_to 'Login', login_path, method: :post, class:"w3-bar-item w3-button" %>
      <% if session[:user_id] %>
      <%= link_to 'Orders', orders_path, class:"w3-bar-item w3-button" %>
      <%= link_to 'Products', products_path, class:"w3-bar-item w3-button"  %>
      <a href="/admin/index" class="w3-bar-item w3-button">Admins</a>    
      <%= link_to 'Users', users_path, class:"w3-bar-item w3-button"  %>
      <a href="/carts" class="w3-bar-item w3-button">Carts</a>      
      <a href="/line_items" class="w3-bar-item w3-button">LineItems</a>    
      <%= link_to 'Logout', logout_path, method: :delete, class:"w3-bar-item w3-button"  %>
      <% end %>
  </div>
   <div class="w3-container">
    <%= yield %>
   </div>    

  </body>
</html>
