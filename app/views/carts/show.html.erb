<h1>View your Order!</h1>
<p id="notice" class="w3-panel"><%= notice %></p>


<table class="w3-table-all">
     
	 
	
<tr>
<div class="panel-body">
 <table class="table table-responsive">
    
    <% @cart.line_items.each do |item| %>
    <tr>
    <td><%= item.quantity %> &times; </td><td><%= item.product.title %></td><td><%= number_to_currency(item.total_price) %></td>
    </tr>
    <% end %>
    <tr>
    <td colspan="2">Total Order Value </td><td><%= number_to_currency(@cart.total_price) %></td>
    </tr>
 </table>
</div>
<tbody>
<td><%= link_to 'Go Back', store_index_url , class:"w3-button w3-yellow" %> </td> <br> <br>
<td><%= button_to "Checkout", new_order_path, method: :get , class:"w3-button w3-yellow" %></td> <br>
<td><%= link_to 'Buy More Tacos', store_index_url , class:"w3-button w3-yellow" %></td> <br>  <br> 
<td> <%= button_to 'Empty cart', @cart, method: :delete, data: { confirm: 'Are you sure?' } , class:"w3-button w3-red" %> </td>

</tr> <br>
</tbody>

</table>


